<?xml version="1.0" encoding="UTF-8"?>
<action-recipes>
	<snippet id="net.texasexpat.latex.snippets.usepackage" category="latex.tools.Snippets">
		<title>usepackage</title>
		<text><![CDATA[\\usepackage{${0:package}}]]></text>
		<syntax-context>latex, tex, LaTeX</syntax-context>
		<text-trigger>use</text-trigger>
	</snippet>
	
	<snippet id="net.texasexpat.latex.snippets.template" category="latex.tools.Snippets">
		<title>Blank template</title>
		<text><![CDATA[\\documentclass[10pt]{article}

\\usepackage{graphicx}
\\usepackage{times}
\\usepackage{amsmath}
\\usepackage{fullpage}

\\bibpunct[; ]{(}{)}{,}{a}{}{;}
\\bibliographystyle{plainnat}

\\title{Title}
\\author{Author}

\\begin{document}

\\maketitle


\\end{document}]]></text>
		<syntax-context>latex, tex, LaTeX</syntax-context>
	</snippet>
	
	<snippet id="net.texasexpat.latex.snippets.table" category="latex.tools.Snippets">
		<title>Empty Table</title>
		<text><![CDATA[\\begin{table}
\\begin{centering}
\\begin{tabular}{r | c c}
\\end{tabular}

\\caption{\\label{${0:tbl_label}}${1:This table has no caption.}}
\\end{centering}
\\end{table}]]></text>
		<syntax-context>latex, tex, LaTeX</syntax-context>
		<text-trigger>table</text-trigger>
	</snippet>
	
	<snippet id="net.texasexpat.latex.snippets.figure" category="latex.tools.Snippets">
		<title>Empty Figure</title>
		<text><![CDATA[\\begin{figure}
\\begin{centering}
\\includegraphics{${0:path_to_figure}}
\\caption{\\label{${1:fig_label}}${2:This figure has no caption.}}
\\end{centering}
\\end{figure}]]></text>
		<syntax-context>latex, tex, LaTeX</syntax-context>
		<text-trigger>figure</text-trigger>
	</snippet>
	
	<snippet id="net.texasexpat.latex.snippets.bibliography" category="latex.tools.Snippets">
		<title>Bibliography</title>
		<text><![CDATA[\\begin{small}
\\bibliography{${0:biblio.bib}}
\\end{small}]]></text>
		<syntax-context>latex, tex, LaTeX</syntax-context>
		<text-trigger>bib</text-trigger>
	</snippet>
	
	<snippet id="net.texasexpat.latex.snippets.enumerate" category="latex.tools.Snippets">
		<title>Enumeration</title>
		<text><![CDATA[\\begin{enumerate}
\\item $0
\\end{enumerate}
]]></text>
		<syntax-context>latex, tex, LaTeX</syntax-context>
		<text-trigger>enum</text-trigger>
	</snippet>

	<snippet id="net.texasexpat.latex.snippets.itemize" category="latex.tools.Snippets">
		<title>Item list</title>
		<text><![CDATA[\\begin{itemize}
\\item $0
\\end{itemize}
]]></text>
		<syntax-context>latex, tex, LaTeX</syntax-context>
		<text-trigger>item</text-trigger>
	</snippet>

	<snippet id="net.texasexpat.latex.snippets.equation" category="latex.tools.Snippets">
		<title>Equation</title>
		<text><![CDATA[\\begin{equation}
$0
\\end{equation}
]]></text>
		<syntax-context>latex, tex, LaTeX</syntax-context>
		<text-trigger>eq</text-trigger>
	</snippet>

	<snippet id="net.texasexpat.latex.snippets.equationarray" category="latex.tools.Snippets">
		<title>Equation array</title>
		<text><![CDATA[\\begin{eqnarray}
$0
\\end{eqnarray}
]]></text>
		<syntax-context>latex, tex, LaTeX</syntax-context>
		<text-trigger>eqa</text-trigger>
	</snippet>

	<snippet id="net.texasexpat.latex.snippets.roof" category="latex.tools.Snippets">
		<title>Insert roof (^)</title>
		<text><![CDATA[^]]></text>
		<syntax-context>latex, tex, LaTeX</syntax-context>
		<text-trigger>roof</text-trigger>
	</snippet>
</action-recipes>